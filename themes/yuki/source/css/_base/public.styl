/* public style*/
*
  -webkit-margin-after 0
  -webkit-margin-before 0

body
  background color-bg
  font-family font-default
  font-size font-size
  color color-font
  line-height line-height

small
  font-size 80%

a
  text-decoration none
  color color-font
  &:hover, &:focus
    outline 0
    text-decoration underline
    transition color .25s, background .5s
  &:hover:before
    transition color .25s, background .5s

input:focus
  outline none

input, button
  margin 0
  padding 0
  &::-moz-focus-inner
    border 0
    padding 0

h1
  font-size 1.5em